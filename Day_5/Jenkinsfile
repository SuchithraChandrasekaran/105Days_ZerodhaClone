pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/SuchithraChandrasekaran/105Days_ZerodhaClone.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t proj5 ."
            }
        }

        stage('Run Script') {
            steps {
                sh "docker run --rm proj5"
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution completed!'
        }
    }
}
